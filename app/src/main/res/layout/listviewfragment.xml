<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:paddingStart="25dp"
                android:text="Nazov"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fragment_imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                card_view:srcCompat="@android:drawable/btn_star" />

            <ImageView
                android:id="@+id/fragment_imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                card_view:srcCompat="@android:drawable/btn_star" />

            <ImageView
                android:id="@+id/fragment_imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                card_view:srcCompat="@android:drawable/btn_star" />

            <ImageView
                android:id="@+id/fragment_imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                card_view:srcCompat="@android:drawable/btn_star" />

            <ImageView
                android:id="@+id/fragment_imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                card_view:srcCompat="@android:drawable/btn_star" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:maxWidth="280dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp"
            android:text="PIZZA"
            android:textSize="16sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>